# MCP Toolkit Environment Configuration
# Copy this to your main toolkit directory as .env

# Obsidian MCP Server
OBSIDIAN_API_BASE_URL=http://host.docker.internal:27123
OBSIDIAN_API_KEY=

# Database Configuration
POSTGRES_USER=mcp
POSTGRES_PASSWORD=secure_password_here
DATABASE_URL=postgresql://mcp:secure_password_here@postgres:5432/mcp_toolkit

# External APIs
SEARCH_API_KEY=your_search_api_key
SEARCH_ENGINE=google

# Toolkit Configuration
COMPOSE_PROJECT_NAME=mcp-toolkit
MCP_TOOLKIT_VERSION=1.0.0

# Optional: Enable management tools
PORTAINER_ENABLED=true

# Optional: Debug settings
DEBUG=mcp:*
LOG_LEVEL=info