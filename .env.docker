# Docker environment configuration
# Copy this file to .env.docker and update the values

# Obsidian Local REST API configuration
# Use host.docker.internal to access Obsidian running on host machine
OBSIDIAN_API_BASE_URL=http://host.docker.internal:27123

# Optional: API key if configured in Obsidian plugin
OBSIDIAN_API_KEY=

# Optional: Debug logging (set to 'mcp:*' for MCP debug logs)
DEBUG=

# Docker-specific settings
COMPOSE_PROJECT_NAME=mcp-toolkit